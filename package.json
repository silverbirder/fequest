{
  "name": "fequest",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:fix": "turbo run test -- --update",
    "ci:fix": "pnpm lint:fix && pnpm format && pnpm check-types && pnpm test:fix",
    "storybook": "pnpm --filter @repo/storybook storybook",
    "build-storybook": "pnpm --filter @repo/storybook build-storybook",
    "chromatic": "npx chromatic",
    "start-database": "pnpm --filter @repo/db db:start",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "generate:feature": "turbo gen feature",
    "generate:component": "turbo gen component"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "chromatic": "^13.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "patchedDependencies": {
      "@vitest/expect@4.0.14": "patches/@vitest__expect@4.0.14.patch"
    }
  }
}
