{
  "name": "fequest",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "storybook": "pnpm --filter @repo/storybook storybook",
    "build-storybook": "pnpm --filter @repo/storybook build-storybook",
    "chromatic": "npx chromatic",
    "start-database": "pnpm --filter @repo/db db:start",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "generate:feature": "turbo gen feature"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "chromatic": "^13.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20"
  }
}
